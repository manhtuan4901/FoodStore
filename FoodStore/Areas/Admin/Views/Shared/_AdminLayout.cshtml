<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home"><h2>Food Store</h2></a>
        </div>
    </nav>

    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <h3 class="text-center">Quản trị</h3>
            </div>
            <hr style="width: 100%;">
            <div class="list-group list-group-flush nav-pills">
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="list-group-item list-group-item-action bg-light">Danh mục</a>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action bg-light">Sản phẩm</a>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action bg-light">Đơn hàng</a>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action bg-light">Người dùng</a>
            </div>
        </div>
        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
