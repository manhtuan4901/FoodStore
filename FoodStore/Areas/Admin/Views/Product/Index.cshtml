@model IEnumerable<FoodStore.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h3>@ViewData["Title"]</h3>
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success mb-3">Thêm sản phẩm</a>
    <table id="productsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Images</td>
                    <td>
                        <a asp-controller="Product" asp-action="Detail" asp-area="Admin" asp-route-id="@item.Id">
                            <button class="btn btn-info">Xem chi tiết</button>
                        </a>
                        <a asp-controller="Product" asp-action="Edit" asp-area="Admin" asp-route-id="@item.Id">
                            <button class="btn btn-warning">Sửa</button>
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Xóa</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


