@model IEnumerable<FoodStore.Models.User>

@{
    ViewData["Title"] = "Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <h3>@ViewData["Title"]</h3>
   
    <table id="productsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Tài khoản</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fullname</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Xóa</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


