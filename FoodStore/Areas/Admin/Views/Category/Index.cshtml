@model IEnumerable<FoodStore.Models.Category>

@{
    ViewData["Title"] = "Danh mục";
}

<div class="container mt-5">
    <h3>@ViewData["Title"]</h3>
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success mb-3">Thêm danh mục</a>
    <table id="productsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên danh mục</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Xóa</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


