@using System.Web
@model IEnumerable<FoodStore.Models.ViewModel.OrderWithUserDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container mt-5">
        <div class="container-fluid">
            <div class="row px-xl-5">
                <div class="col-lg d-flex align-items-stretch">
                    <div class="card w-100">
                        <div class="card-body">
                            <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                                <div class="mb-3 mb-sm-0">
                                    <h2 class="card-title fw-semibold">Đơn hàng</h2>
                                </div>
                            </div>
                            <div class="row">
                            <table id="productsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Tên khách hàng</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Số điện thoại</th>
                                        <th scope="col">Địa chỉ</th>
                                        <th scope="col">Ngày tạo</th>
                                        <th scope="col">Tổng tiền</th>
                                        <th scope="col">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.User.Fullname</td>
                                            <td>@item.User.Email</td>
                                            <td>@item.User.Phone</td>
                                            <td>@item.User.Address</td>
                                            <td>@item.Order.OrderDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Order.TotalAmount</td>
                                            <td>
                                                <a asp-controller="Order" asp-action="Detail" asp-area="Admin" asp-route-id="@item.Order.Id">
                                                    <button class="btn btn-info">Xem</button>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{
        <script src="~/js/admin.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
