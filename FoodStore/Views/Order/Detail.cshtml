@using FoodStore.Models.ViewModel
@model OrderWithDetails

<div class="p-t-140 p-b-120">
    <div class="container">
        <div class="container-fluid">
            <div class="row px-xl-5">
                <div class="col-lg d-flex align-items-stretch">
                    <div class="card w-100">
                        <div class="card-body">
                            <h5 class="card-title fw-semibold">Thông tin đơn hàng</h5>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Tên khách hàng</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.User.Fullname</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Chi tiết hóa đơn</p>
                                </div>
                                <div class="col-sm-9">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">Tên sản phẩm</th>
                                                <th scope="col">Giá</th>
                                                <th scope="col">Số lượng</th>
                                                <th scope="col">Tổng tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in Model.OrderDetails)
                                            {
                                                <tr>
                                                    <td>@detail.ProductName</td>
                                                    <td>@detail.Price</td>
                                                    <td>@detail.Quantity</td>
                                                    <td>@(detail.Price * detail.Quantity)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Địa chỉ giao hàng</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.User.Address</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.User.Email</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Số điện thoại</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.User.Phone</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Tổng tiền đơn hàng</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Order.TotalAmount</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Trạng thái</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Order.GetStatusText()</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a href="/order/index" class="btn btn-dark m-1">Trở về</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

